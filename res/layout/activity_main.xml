<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.sofia.tissi.MainActivity"
    android:orientation="vertical">

    <HorizontalScrollView
        android:id="@+id/scroll1"
        android:layout_width="match_parent"
        android:layout_weight="17"
        android:layout_height="0dp">
        <TextView
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:padding="10dp"
            android:textSize="50sp"
            android:layout_gravity="end"
            android:textAlignment="textEnd"
            android:maxLines = "1"
            android:id="@+id/mid"/>
    </HorizontalScrollView>

    <HorizontalScrollView
        android:id="@+id/scroll2"
        android:layout_width="match_parent"
        android:layout_weight="13"
        android:layout_height="0dp">
        <TextView
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:padding="10dp"
            android:textSize="30sp"
            android:layout_gravity="end"
            android:textAlignment="textEnd"
            android:maxLines = "1"
            android:id="@+id/con" />
    </HorizontalScrollView>

    <LinearLayout
        android:layout_width="match_parent"
        android:baselineAligned="false"
        android:layout_weight="70"
        android:layout_height="0dp">

        <TableLayout
            android:layout_height="match_parent"
            android:layout_width="0dp"
            android:layout_weight="80">
            <TableRow
                android:layout_height="0dp"
                android:layout_weight="25"
                android:stretchColumns="3">
                <Button
                    android:id="@+id/num1"
                    android:text="1"
                    android:onClick="numberClicked"
                    style="@style/buttonStyle" />

                <Button
                    android:id="@+id/num2"
                    android:text="2"
                    android:onClick="numberClicked"
                    style="@style/buttonStyle" />

                <Button
                    android:id="@+id/num3"
                    android:text="3"
                    android:onClick="numberClicked"
                    style="@style/buttonStyle" />
            </TableRow>


            <TableRow
                android:layout_weight="25"
                android:layout_height="0dp"
                android:stretchColumns="3">

                <Button
                    android:id="@+id/num4"
                    android:text="4"
                    android:onClick="numberClicked"
                    style="@style/buttonStyle" />

                <Button
                    android:id="@+id/num5"
                    android:text="5"
                    android:onClick="numberClicked"
                    style="@style/buttonStyle" />

                <Button
                    android:id="@+id/num6"
                    android:text="6"
                    android:onClick="numberClicked"
                    style="@style/buttonStyle"/>

            </TableRow>
            <TableRow
                android:layout_weight="25"
                android:layout_height="0dp"
                android:stretchColumns="3">

                <Button
                    android:id="@+id/num7"
                    android:text="7"
                    android:onClick="numberClicked"
                    style="@style/buttonStyle" />

                <Button
                    android:id="@+id/num8"
                    android:text="8"
                    android:onClick="numberClicked"
                    style="@style/buttonStyle" />

                <Button
                    android:id="@+id/num9"
                    android:text="9"
                    android:onClick="numberClicked"
                    style="@style/buttonStyle" />
            </TableRow>


            <TableRow
                android:layout_weight="25"
                android:layout_height="0dp"
                android:stretchColumns="3">

                <Button
                    android:id="@+id/numP"
                    android:text=","
                    android:onClick="commaClicked"
                    style="@style/buttonStyle" />

                <Button
                    android:id="@+id/num0"
                    android:text="0"
                    android:onClick="numberClicked"
                    style="@style/buttonStyle" />

                <Button
                    android:id="@+id/buttonOn"
                    android:text="="
                    android:onClick="calculationClicked"
                    style="@style/buttonStyle" />
            </TableRow>
        </TableLayout>

        <LinearLayout
            android:layout_height="match_parent"
            android:layout_weight="20"
            android:layout_width="0dp"
            android:orientation="vertical">
            <Button
                android:id="@+id/numC"
                android:text="C"
                android:onClick="cClicked"
                style="@style/buttonStyle2"/>

            <Button
                android:id="@+id/numPl"
                android:text="+"
                android:onClick="calculationClicked"
                style="@style/buttonStyle2"/>

            <Button
                android:id="@+id/numM"
                android:text="-"
                android:onClick="calculationClicked"
                style="@style/buttonStyle2"/>

            <Button
                android:id="@+id/numX"
                android:text="x"
                android:onClick="calculationClicked"
                style="@style/buttonStyle2"/>

            <Button
                android:id="@+id/numS"
                android:text="/"
                android:onClick="calculationClicked"
                style="@style/buttonStyle2" />
        </LinearLayout>

    </LinearLayout>
</LinearLayout>
